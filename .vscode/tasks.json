{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "problemMatcher": {
    "owner": "groktest",
    "fileLocation": "absolute",
    "pattern": [
      {
        "regexp": "^File \"(.*)\", line (\\d+)",
        "file": 1,
        "line": 2
      },
      {
        "regexp": "^(Failed example)",
        "message": 1
      }
    ]
  },
  "presentation": {
    "revealProblems": "onProblem",
    "showReuseMessage": false,
    "clear": true,
    "focus": false
  },

  "tasks": [
    {
      "label": "Run Current as Test",
      "type": "process",
      "command": "${command:python.interpreterPath}",
      "args": ["-m", "groktest", "${file}"]
    },
    {
      "label": "Run Test",
      "type": "process",
      "command": "${command:python.interpreterPath}",
      "args": ["-m", "groktest", "${workspaceFolder}/${input:test}"]

    },
    {
      "label": "Run Last Test",
      "type": "process",
      "command": "${command:python.interpreterPath}",
      "args": ["-m", "groktest", "--last"]

    },
    {
      "label": "Run All Tests",
      "type": "process",
      "command": "${command:python.interpreterPath}",
      "args": [
        "-m",
        "groktest",
        "${workspaceFolder}/README.md",
        "${workspaceFolder}/implementation.md"
      ]
    }
  ],

  "inputs": [
    {
      "id": "test",
      "type": "pickString",
      "description": "Project test",
      "options": [
        "README.md",
        "implementation.md",
        "examples/doctest.md",
        "examples/simple.md",
        "examples/unkown-format.md"
      ]
    }
  ]
}
