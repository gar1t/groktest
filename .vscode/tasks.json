{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "problemMatcher": {
    "owner": "groktest",
    "fileLocation": "relative",
    "pattern": [
      {
        "regexp": "^File \"(.*)\", line (\\d+)",
        "file": 1,
        "line": 2
      },
      {
        "regexp": "^(Failed example)",
        "message": 1
      }
    ]
  },
  "presentation": {
    "revealProblems": "onProblem",
    "showReuseMessage": false,
    "clear": true,
    "focus": false
  },

  "tasks": [
    {
      "label": "Groktest: Run Current",
      "type": "process",
      "command": "${command:python.interpreterPath}",
      "args": ["-m", "groktest", "${relativeFile}"]
    },
    {
      "label": "Groktest: Run Selected",
      "type": "process",
      "command": "${command:python.interpreterPath}",
      "args": ["-m", "groktest", "${workspaceFolder}/${input:test}"]
    },
    {
      "label": "Groktest: Run Last",
      "type": "process",
      "command": "${command:python.interpreterPath}",
      "args": ["-m", "groktest", "--last"]
    },
    {
      "label": "Groktest: Run All Tests",
      "type": "process",
      "command": "${command:python.interpreterPath}",
      "args": ["-m", "groktest", "${workspaceFolder}"]
    }
  ],

  "inputs": [
    {
      "id": "test",
      "type": "pickString",
      "description": "Project test",
      "options": [
        "README.md",
        "docs/api.md",
        "docs/implementation.md",
        "docs/python.md",
        "docs/yaml-support.md",
        "examples/doctest.md",
        "examples/defaults.md",
        "examples/unkown-format.md"
      ]
    }
  ]
}
