{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "problemMatcher": {
    "owner": "groktest",
    "fileLocation": "absolute",
    "pattern": {
      "regexp": "^File \"(.*)\", line (\\d+)",
      "file": 1,
      "line": 2
    }
  },
  "presentation": {
    "revealProblems": "onProblem",
    "showReuseMessage": false,
    "clear": true,
    "focus": false
  },

  "tasks": [
    {
      "label": "Run Current as Doctest",
      "type": "shell",
      "command": "python",
      "args": ["-m", "doctest", "${file}"]
    }
  ]
}
